<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="text_style">
        <item name="android:textColor">#FF6666</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="big_text_style" parent="text_style">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="calculator_style">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="display_style" parent="calculator_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">108dp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="column_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="digit_button_style" parent="calculator_style">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="kigou_button_style" parent="calculator_style">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
